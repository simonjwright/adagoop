with Ada.Command_Line;
use Ada.Command_Line;
with ada.text_io;
use ada.text_io;
with test;
procedure Lexer is
   x : test.Token;
begin
   if argument_count /= 1 then
      put_line("usage: tool filename");
     return;
   end if;
   Test.Reset(Argument(1));
   X:= Test.Get_Token;
   put_line(integer'image(test.Get_Current_Column) & ":" & integer'image(test.Get_Current_Line) & test.Token'image(x));
end lexer;